<main class="login">
    <div class="login__wrap">
        <h1 class="login__title">Вход</h1>
        <form class="login__form">
            {{#each fields}}
                {{{Field
                    label=label
                    name=name
                    type=type
                    isTopLabelPosition=true
                }}}
            {{/each}}

            <div class="login__form-btn-wrap">
                {{{Button text="Войти" onClick=onSingInBtnClick}}}
            </div>
        </form>

        <div class="login__form-error">
            {{#if isLoading}}
                <div class="loader"></div>
            {{/if}}
            {{{ErrorMessage isShow=error.isShow text=error.text}}}
        </div>

        <div class="login__register-link-wrap">
            {{#Link to="/register"}}Впервые?{{/Link}}
        </div>
    </div>
</main>
