<main class="login">
    <div class="login__wrap">
        <h1 class="login__title">Вход</h1>
        <form class="login__form">
            {{#each fields}}
                {{{Field label=label name=name type=type class=class validationType=validationType ref=name}}}
            {{/each}}

            <div class="login__form-btn-wrap">
                {{{Button text="Войти" onClick=onClick}}}
            </div>
        </form>

        <div class="login__register-link-wrap">
            <a class="link" href="/register.html">Впервые?</a>
        </div>
    </div>
</main>
