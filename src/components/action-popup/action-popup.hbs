<div class="action-popup action-popup--{{position}} sm-popup hidden">
    {{#each actions}}
        {{#Button class="action-popup__item" onClick=onClick}}
            {{#if icon}}
                <img class="action-popup__item-icon" src="{{icon}}">
            {{else if class}}
                <i class="action-popup__item-icon {{class}}"></i>
            {{/if}}
            <span>{{text}}</span>
        {{/Button}}
    {{/each}}
</div>
