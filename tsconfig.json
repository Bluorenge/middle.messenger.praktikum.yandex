{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "es2016",
        "lib": ["ESNext", "DOM", "dom.iterable"],
        "module": "commonjs",
        "baseUrl": "./src",
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true
    }
}
